#include <stdio.h>
#include <string.h>

void encrypt(char message[], int key) {
    int i;
    char ch;

    for (i = 0; i < strlen(message); i++) {
        ch = message[i];

        
        if (ch >= 'A' && ch <= 'Z') {
            ch = ((ch - 'A' + key) % 26) + 'A';
        }
        
        else if (ch >= 'a' && ch <= 'z') {
            ch = ((ch - 'a' + key) % 26) + 'a';
        }

        printf("%c", ch);
    }

    printf("\n");
}

int main() {
    char message[100];
    int key;

    printf("Enter a message to encrypt: ");
    fgets(message, sizeof(message), stdin);

    // Remove the trailing newline character from the input
    message[strcspn(message, "\n")] = 0;

    // Iterate through all possible keys (1 to 25) and print the encrypted messages
    for (key = 1; key <= 25; key++) {
        printf("Encryption with key %d: ", key);
        encrypt(message, key);
    }

    return 0;
}
